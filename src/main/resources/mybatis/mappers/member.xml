		]]>
	</select>
	<select id="naver_id_db_chek" parameterType="kjhmemberVO" resultType="String">
	<![CDATA[
		select m_num
		from kjhmember
		WHERE 
		m_id = #{m_id}
		]]>
	</select>
	
